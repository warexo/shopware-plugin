{% sw_extends '@Storefront/storefront/component/checkout/offcanvas-item.html.twig' %}

{% block cart_item_variant_characteristics %}

    {{ parent() }}

    {% if lineItem.payload.warexoProductOptionSelections %}
        {% for selection in lineItem.payload.warexoProductOptionSelections %}
            <div class="cart-item-product-option-selections">
                {{ selection.option }}: {{ selection.value }}
            </div>
        {% endfor %}
    {% endif %}

{% endblock %}