{% sw_extends '@Storefront/storefront/element/cms-element-product-description-reviews.html.twig' %}

{% block element_product_desciption_reviews_tabs_navigation_review %}
    {{ parent() }}
    {% if page.extensions.downloadableMedia|length > 0 %}
        <li class="nav-item">
            <a class="nav-link product-detail-tab-navigation-link"
               id="download-media-tab"
            {{ dataBsToggleAttr }}="tab"
            data-offcanvas-tabs="true"
            href="#download-media-tab-pane"
            role="tab"
            aria-controls="download-media-tab-pane"
            aria-selected="true">
            {{ "detail.tabsDownloads"|trans|sw_sanitize }}
            <span class="product-detail-tab-navigation-icon">
                    {% sw_icon 'file' %}
                </span>
            </a>
        </li>
    {% endif %}
{% endblock %}

{% block element_product_desciption_reviews_tabs_content_review %}
    {{ parent() }}

    {% if page.extensions.downloadableMedia|length > 0 %}
        <div class="tab-pane fade show"
             id="download-media-tab-pane"
             role="tabpanel"
             aria-labelledby="download-media-tab">
            {% sw_include '@Storefront/storefront/page/product-detail/download-media.html.twig' with {'media': page.extensions.downloadableMedia} %}
        </div>
    {% endif %}
{% endblock %}